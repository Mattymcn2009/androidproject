<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    tools:context=".MainActivity"
    android:background="@drawable/images"
    >

    <Button android:id="@+id/buttWelcome"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:text="Welcome"
        android:onClick="clickWelcome"
        android:background="#3dc9cc"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_above="@+id/buttNutrition"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/buttBMIAndCalories"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:layout_above="@+id/buttStepsCounter"
        android:layout_alignParentEnd="true"
        android:background="#3dc9cc"
        android:onClick="clickBMIAndCalories"
        android:text="BMI And Calories"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button android:id="@+id/buttStepsCounter"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:text="Steps Counter"
        android:onClick="clickStepsCounter"
        android:background="#3dc9cc"
        android:layout_marginLeft="20dp"
        android:allowUndo="false"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttFitnessExercises"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <Button android:id="@+id/buttNutrition"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:text="Nutrition"
        android:onClick="clickNutrition"
        android:background="#3dc9cc"
        android:layout_marginRight="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttTopGymsInArea"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button android:id="@+id/buttTopGymsInArea"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:text="Top Gyms in Area"
        android:onClick="clickTopGymsInArea"
        android:background="#3dc9cc"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_above="@+id/buttDashboard"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <Button android:id="@+id/buttFitnessExercises"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:text="Fitness Exercises"
        android:onClick="clickFitnessExercises"
        android:background="#3dc9cc"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_above="@+id/buttDashboard"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Dashboard"
        android:onClick="clickDashboard"
        android:id="@+id/buttDashboard"
        android:background="#3dc9cc"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Monitoring"
        android:id="@+id/textView2"
        android:textSize="26dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttBMIAndCalories"
        android:layout_above="@+id/buttWelcome"
        android:background="#3dc9cc"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center" />
</RelativeLayout>